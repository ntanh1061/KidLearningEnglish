<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/img_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/categories_appliances"
            />

        <TextView
            android:id="@+id/tv_title_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_categories"
            android:gravity="center"
            android:text="Fuck"
            android:textStyle="bold"
            android:textColor="@color/colorToolbar"
            android:padding="@dimen/default_margin"
            android:background="@color/background_text"
            android:layout_alignEnd="@+id/img_categories"
            android:layout_alignStart="@+id/img_categories"
            android:layout_alignRight="@+id/img_categories"
            android:layout_alignLeft="@+id/img_categories" />
    </RelativeLayout>
</android.support.v7.widget.CardView>