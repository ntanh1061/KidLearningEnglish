<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <android.support.v7.widget.CardView
        android:layout_above="@+id/btn_word_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/image_margin_top_bottom"
        android:layout_marginTop="@dimen/image_margin_top_bottom"
        android:background="@color/button_color_normal">

        <ImageView
            android:id="@+id/img_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/animal_bison"
            android:layout_marginBottom="@dimen/image_margin_top_bottom"
            android:layout_marginTop="@dimen/image_margin_top_bottom"
            />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_word_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_word_3"
        android:layout_alignLeft="@+id/btn_word_3"
        android:layout_alignRight="@+id/btn_word_3"
        />

    <Button
        android:id="@+id/btn_word_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginLeft="@dimen/image_margin_top_bottom"
        android:layout_marginRight="@dimen/image_margin_top_bottom" />

</RelativeLayout>