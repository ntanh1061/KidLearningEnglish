<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relaytive_help"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_margin"
        android:background="@color/background_color_image"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/animal_anteater" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/relaytive_help"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_above="@+id/ln_help2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/img_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/default_margin"
            android:src="@mipmap/gi_help" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_char_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" _ "
                android:textStyle="bold"
                android:visibility="gone" android:textColor="@color/button_color_normal"/>

            <TextView
                android:id="@+id/tv_char_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" _ "
                android:textStyle="bold"
                android:visibility="gone" android:textColor="@color/button_color_normal"/>

            <TextView
                android:id="@+id/tv_char_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" _ "
                android:textStyle="bold"
                android:visibility="gone" android:textColor="@color/button_color_normal"/>

            <TextView
                android:id="@+id/tv_char_3"
