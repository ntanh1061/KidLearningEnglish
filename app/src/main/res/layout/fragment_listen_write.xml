                android:textStyle="bold"
                android:visibility="gone" android:textColor="@color/button_color_normal"/>

            <TextView
                android:id="@+id/tv_char_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" _ "
                android:textStyle="bold"
                android:visibility="gone" android:textColor="@color/button_color_normal"/>

            <TextView
                android:id="@+id/tv_char_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" _ "
                android:textStyle="bold"
                android:visibility="gone" android:textColor="@color/button_color_normal"/>

            <TextView
                android:id="@+id/tv_char_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" _ "
                android:textStyle="bold"
                android:visibility="gone" android:textColor="@color/button_color_normal"/>

            <TextView
                android:id="@+id/tv_char_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" _ "
                android:textStyle="bold"
                android:visibility="gone" android:textColor="@color/button_color_normal"/>

            <TextView
                android:id="@+id/tv_char_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" _ "
                android:textStyle="bold"
                android:visibility="gone" android:textColor="@color/button_color_normal"/>

            <TextView
                android:id="@+id/tv_char_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" _ "
                android:textStyle="bold"
                android:visibility="gone" android:textColor="@color/button_color_normal"/>

            <TextView
                android:id="@+id/tv_char_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" _ "
                android:textStyle="bold"
                android:visibility="gone" android:textColor="@color/button_color_normal"/>

            <TextView
                android:id="@+id/tv_char_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" _ "
                android:textStyle="bold"
                android:visibility="gone" android:textColor="@color/button_color_normal"/>

            <TextView
                android:id="@+id/tv_char_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" _ "
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/button_color_normal"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_play_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/gi_play_sound" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ln_help2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ln_help"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="@dimen/default_padding">

        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relaytive_help"
            android:layout_margin="@dimen/default_padding"
            android:layout_weight="1"
            android:background="@drawable/background_button_custom_wrong" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relaytive_help"
            android:layout_margin="@dimen/default_padding"
            android:layout_weight="1"
            android:background="@drawable/background_button_custom_wrong" />

        <Button
