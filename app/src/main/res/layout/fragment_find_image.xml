<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/image_margin"
            android:layout_marginTop="@dimen/image_margin"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_image_view_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/image_margin_top_bottom"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginTop="@dimen/image_margin_top_bottom"
                    android:scaleType="fitXY" />

                <View
                    android:id="@+id/view_wrong_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_right"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view_right_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_wrong"
                    android:visibility="gone" />

            </FrameLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/image_margin"
            android:layout_marginRight="@dimen/image_margin"
            android:layout_marginTop="@dimen/image_margin"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_image_view_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/image_margin_top_bottom"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginTop="@dimen/image_margin_top_bottom"
                    android:scaleType="fitXY" />

                <View
                    android:id="@+id/view_wrong_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_right"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view_right_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_wrong"
                    android:visibility="gone" />


            </FrameLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/image_margin"
            android:layout_marginTop="@dimen/image_margin"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_image_view_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/image_margin_top_bottom"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginTop="@dimen/image_margin_top_bottom"
                    android:scaleType="fitXY" />

                <View
                    android:id="@+id/view_wrong_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_right"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view_right_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_wrong"
                    android:visibility="gone" />

            </FrameLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/image_margin"
            android:layout_marginRight="@dimen/image_margin"
            android:layout_marginTop="@dimen/image_margin"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_image_view_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/image_margin_top_bottom"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginTop="@dimen/image_margin_top_bottom"
                    android:scaleType="fitXY" />

                <View
                    android:id="@+id/view_wrong_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_right"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view_right_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_wrong"
                    android:visibility="gone" />
            </FrameLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/default_margin_top"
        android:text="Word"
        android:textSize="@dimen/text_name_size"
        android:textStyle="bold" />
</LinearLayout>